            <liquibase.url>jdbc:sqlserver://localhost:1433;database=devops</liquibase.url>
            <liquibase.driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</liquibase.driver>
            <liquibase.username>devops</liquibase.username>
            <liquibase.password>Aa12345678</liquibase.password>


        <java.version>1.8</java.version>
    </properties>

    <groupId>org.example</groupId>
    <artifactId>liquibase-poc</artifactId>
    <version>1.0-SNAPSHOT</version>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-core</artifactId>
                <version>3.8.8</version>
            </dependency>

            <dependency>
                <groupId>com.microsoft.sqlserver</groupId>
                <artifactId>mssql-jdbc</artifactId>
                <version>7.4.1.jre8</version>
            </dependency>

          <!--  <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>3.8.8</version>
            </dependency>
            <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>3.8.8</version>
                <type>maven-plugin</type>
            </dependency>-->

        </dependencies>

    </dependencyManagement>


    <build>
        <pluginManagement>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-plugin-plugin</artifactId>
            <version>3.3</version>
        </plugin>
    <plugin>
        <groupId>org.liquibase</groupId>
        <artifactId>liquibase-maven-plugin</artifactId>
        <version>3.5.3</version>
        <configuration>
            <changeLogFile>${basedir}/src/main/resources/db/changelog/liquibase/db.changelog-master.xml
            </changeLogFile>
            <propertyFile>${basedir}/src/main/resources/application.properties</propertyFile>
            <url>${liquibase.url}</url>
            <username>${liquibase.username}</username>
            <password>${liquibase.password}</password>
            <driver>${liquibase.driver}</driver>
        </configuration>
        <executions>
            <execution>
                <phase>process-resources</phase>
                <goals>
                    <goal>update</goal>
                </goals>
            </execution>
        </executions>
        <dependencies>
            <dependency>
                <groupId>com.microsoft.sqlserver</groupId>
                <artifactId>mssql-jdbc</artifactId>
                <version>7.4.1.jre8</version>
            </dependency>
            <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-core</artifactId>
                <version>3.8.8</version>
            </dependency>
            <dependency>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>3.8.8</version>
                <type>maven-plugin</type>
            </dependency>

        </dependencies>
    </plugin>
    </plugins>
    </pluginManagement>

</build>

</project>
